<Project Sdk="Microsoft.NET.Sdk">
  <!-- BAD: Properties duplicated in LibB -->
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Company>Contoso</Company>
    <Authors>Build Team</Authors>
    <Copyright>Copyright 2024 Contoso</Copyright>
  </PropertyGroup>

  <!-- BAD: Hardcoded absolute path -->
  <PropertyGroup>
    <OutputPath>C:\builds\output\LibA</OutputPath>
  </PropertyGroup>

  <!-- BAD: Condition not quoted properly on both sides -->
  <PropertyGroup Condition="$(Configuration) == Debug">
    <DefineConstants>ENABLE_LOGGING</DefineConstants>
  </PropertyGroup>

  <!-- BAD: Explicit file includes (SDK handles this) -->
  <ItemGroup>
    <Compile Include="Class1.cs" />
  </ItemGroup>

  <!-- BAD: Using Reference instead of PackageReference -->
  <ItemGroup>
    <Reference Include="Newtonsoft.Json">
      <HintPath>..\packages\Newtonsoft.Json.13.0.3\lib\net6.0\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

  <!-- BAD: Exec for something a built-in task could do -->
  <Target Name="PrintVersion" BeforeTargets="Build">
    <Exec Command="echo Building version 1.0.0" />
  </Target>
</Project>
